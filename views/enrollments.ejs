<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Manage Enrollments</title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>

<body class="bg-light">

<div class="container my-5">
    <!-- Page Header -->
    <h2 class="text-center text-primary mb-4">Enrollments</h2>

    <!-- Enroll Student Form -->
    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <form action="/enrollments/add" method="POST">
                <div class="mb-3">
                    <label for="studentId" class="form-label">Select Student</label>
                    <select name="studentId" id="studentId" class="form-select" required>
                        <option value="">Select Student</option>
                        <% students.forEach(student => { %>
                            <option value="<%= student._id %>"><%= student.name %></option> <!-- ✅ Fixed -->
                        <% }) %>
                    </select>
                </div>

                <div class="mb-3">
                    <label for="courseId" class="form-label">Select Course</label>
                    <select name="courseId" id="courseId" class="form-select" required>
                        <option value="">Select Course</option>
                        <% courses.forEach(course => { %>
                            <option value="<%= course._id %>"><%= course.name %></option>
                        <% }) %>
                    </select>
                </div>

                <div class="mb-3">
                    <label for="grade" class="form-label">Grade (A, B, C...)</label>
                    <input type="text" placeholder="Grade (A, B, C...)" name="grade" id="grade" class="form-control" required>
                </div>

                <div class="d-grid">
                    <button type="submit" class="btn btn-success">Enroll</button>
                </div>
            </form>
        </div>
    </div>

    <!-- Enrollment List -->
    <h3 class="text-center mb-3">Enrollment List</h3>
    <ul class="list-group mb-4">
        <% if (enrollments.length > 0) { %>
            <% enrollments.forEach(enrollment => { %>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <div>
                        <strong><%= enrollment.studentId.name %></strong> - <%= enrollment.courseId.name %> - Grade: <%= enrollment.grade %> <!-- ✅ Fixed -->
                    </div>
                </li>
            <% }) %>
        <% } else { %>
            <li class="list-group-item text-center">No enrollments found</li>
        <% } %>
    </ul>

    <!-- Back to Home Link -->
    <div class="text-center">
        <a href="/" class="btn btn-outline-secondary">Back to Home</a>
    </div>
</div>

<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
